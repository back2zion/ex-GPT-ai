# ex-GPT Environment Variables
# Copy this file to .env and update with your values

# Environment
ENVIRONMENT=development
DEBUG=True

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
SECRET_KEY=your-secret-key-here-change-in-production

# Model Endpoints
CHAT_MODEL_ENDPOINT=http://localhost:8000/v1
CHAT_MODEL_NAME=Qwen3-32B
EMBEDDING_MODEL_ENDPOINT=http://localhost:8100/v1
EMBEDDING_MODEL_NAME=Qwen3-Embedding-0.6B
RERANK_MODEL_ENDPOINT=http://localhost:8101/v1
RERANK_MODEL_NAME=bge-reranker-v2-m3

# For cloud models (alternative)
# CHAT_MODEL_ENDPOINT=https://api.together.xyz/v1
# MODEL_SERVER_API_KEY=your-api-key-here

# Hugging Face
HF_TOKEN=your-huggingface-token-here

# Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333

# GPU Configuration
CUDA_VISIBLE_DEVICES=4,5,6,7

# Search Settings
SEARCH__SESSION_FILE_MULTIPLIER=1.5
SEARCH__SESSION_FILE_OFFSET=0.0
SEARCH__GA_FILE_MULTIPLIER=1.1
SEARCH__GA_FILE_OFFSET=0.0
SEARCH__RERANKER_MAX_DOCUMENTS=10
SEARCH__RERANKER_SCORE_THRESHOLD=0.01
SEARCH__RETRIEVER_MAX_DOCUMENTS=10
SEARCH__RETRIEVER_SCORE_THRESHOLD=0.0

# Feature Flags
FLAGS__ENABLE_VLM=True
FLAGS__ENABLE_RERANK=True
FLAGS__ENABLE_FILE_CONTEXT_GENERATION=True

# MinIO Object Storage
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=admin123456

# Database (optional)
# DATABASE_URL=postgresql://user:password@localhost/exgpt

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/ex-gpt.log

# File Upload
MAX_FILE_SIZE=104857600  # 100MB in bytes
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.pdf,.doc,.docx,.xls,.xlsx,.hwp,.txt

# Korea Expressway Corporation Settings
ORGANIZATION=한국도로공사
GA_ENABLE_PREDICTION=True
