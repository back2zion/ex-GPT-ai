# 개발 환경 설정
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# 서버 설정
HOST=0.0.0.0
PORT=8001
WORKERS=4

# 데이터베이스 설정
DATABASE_URL=postgresql://postgres:password@localhost:5432/exgpt_multimodal
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# JWT 설정
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 파일 업로드 설정
MAX_FILE_SIZE=100MB
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.gif,.pdf,.docx,.xlsx,.mp3,.wav,.mp4,.avi
UPLOAD_PATH=./uploads

# Qdrant 벡터 데이터베이스 설정
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=exgpt_documents
QDRANT_API_KEY=

# 모델 설정 - Qwen3 기반
LLM_MODEL=Qwen/Qwen2.5-7B-Instruct
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-mpnet-base-v2
OCR_LANGUAGES=kor+eng
WHISPER_MODEL=large-v3

# 캐시 설정 (메모리 기반)
CACHE_TYPE=memory
CACHE_TTL=3600
MAX_CACHE_SIZE=1000

# GPU 설정
CUDA_VISIBLE_DEVICES=0,1
TORCH_USE_CUDA_DSA=1

# 외부 API 설정
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# 모니터링 설정
PROMETHEUS_PORT=9090
ENABLE_METRICS=true

# 한국도로공사 특화 설정
KEC_API_BASE_URL=https://api.ex.co.kr
KEC_API_KEY=
KEC_DEPT_CODE=
KEC_USER_VALIDATION_URL=

# MCP 백엔드 연동 설정
MCP_BACKEND_URL=http://localhost:8002
MCP_API_KEY=
ENABLE_MCP_INTEGRATION=true

# 멀티모달 처리 설정
IMAGE_MAX_SIZE=50MB
VIDEO_MAX_SIZE=500MB
AUDIO_MAX_SIZE=100MB
BATCH_SIZE=8
MAX_CONCURRENT_TASKS=4

# 로깅 설정
LOG_FILE_PATH=./logs/multimodal.log
LOG_ROTATION=10 MB
LOG_RETENTION=30 days
